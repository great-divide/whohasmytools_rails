<!-- TOOL SECTION, float side by side -->
<h2><%= link_to "My Tools", user_tools_path(@user)%></h2>
	<% @user.tools.each.with_index(1) do |t, index| %>
		<p>
			<b><%= "#{index}." %><%= link_to "#{t.name}: ", tool_path(t.id)%></b> <%= t.description %>
		</p>
	<% end %>

<h3>Add some tools to your toolbox so you can loan them out!</h3>
	<%= form_for @tool do |f| %>
		<%= f.label :name, "Name: " %>
		<%= f.text_field :name %> <br>
		<%= f.label :description, "Description (optional): " %>
		<%= f.text_field :description %> <br>
		<%= f.submit "Add to my Toolbox" %>
	<% end %>

<!-- Loan or Borrow things, float side by side -->
<h3>Loan a Tool to a Friend</h3>
	<%= form_for @contract do |f| %>
		<%= f.label :borrower %>
		<%= f.text_field :borrower %>
		<%= f.label :tool, "Tool: " %>
		<%= f.collection_select :tool, @user.available_tools, :name, :name %>
		<%= f.submit "Loan it out!" %>
	<% end %>
