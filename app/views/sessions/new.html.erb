<% if @user.errors.any? %>
  <% @user.errors.each do |att, message| %>
    <h3><%= message %></h3>
  <% end %>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>




<%= form_for @user do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Sign Me Up!" %>
<% end %>

    <%= link_to('Log in with Facebook!', '/auth/facebook') %>

