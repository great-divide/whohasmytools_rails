 <div class="container">
      <div class="col-md-8 col-md-offset-2">
        <h1>Who Has My Tools?</h1>

        <div class="content">
          <h2>Log In:</h2>
            <form action="/login" method="POST">
              <p>Username: <input type="text" name="login[username]"></p>
              <p>Password: <input type="password" name="login[password]"></p>
              <input type="submit" id="Log In" value="Log In">
            </form>
        </div>

        <div class="content">
          <h2>Sign Up!</h2>
          <form action="/signup" method="POST" name="sign_up" value="" id="">
            <p>Username: <input type="text" name="username" id="username" placeholder="Tim Taylor"></p>
            <p>Email: <input type="email" name="email" id="email" placeholder="tim@tooltime.com"></p>
            <p>Password: <input type="password" name="password" id="password" placeholder="password"></p>
            <p><input type="submit" value="Sign Up"></p>
          </form>
        </div>



      </div>
    </div>
    
  <%= render partial: "/users/form", locals: {user: @user} %>